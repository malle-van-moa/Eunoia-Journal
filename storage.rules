rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Standardregel: Kein Zugriff ohne explizite Erlaubnis
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Journal-Bilder
    match /journal_images/{userId}/{entryId}/{imageFile} {
      // Lesen und Löschen nur für authentifizierte Benutzer mit passender userId
      allow read, delete: if request.auth != null && request.auth.uid == userId;
      
      // Strikte Upload-Regeln
      allow create: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/jpeg')  // Nur JPEG
                   && request.resource.metadata.keys().hasAll(['entryId', 'userId', 'width', 'height'])
                   && request.resource.metadata.userId == userId
                   && request.resource.metadata.entryId.matches('^[a-zA-Z0-9_-]+$')
                   && int(request.resource.metadata.width) <= 2048  // Max Breite
                   && int(request.resource.metadata.height) <= 2048;  // Max Höhe
    }
  }
}
